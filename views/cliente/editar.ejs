<%- include ('../partials/header.ejs') %>
<%- include ('../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h3>Nova Cliente</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/cliente/atualizar">
                <input type="hidden" name="id" value="<%= cliente.id%>">
                <label>Cliente</label>
                <input type="text" class="form-control" name="cliente" placeholder="Digite aqui o nome do cliente" value="<%= cliente.cliente%>">
                <button class="btn btn-primary" style="margin-top: 1rem;">Salvar</button>
            </form>
        </div>
    </div>
</div>
<%- include ('../partials/footer.ejs') %>